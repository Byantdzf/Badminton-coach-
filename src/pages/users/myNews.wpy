                  </view>
                  <view class="font_26 flo_l color-theme ellipsis_1" style="margin-left: 16rpx;max-width: 88%;">{{item.content}}</view>
                  <!--<view class="weui-cell__ft weui-cell__ft_in-access">-->
                  <view class="dist flo_r" wx:if="{{item.status}}"></view>
                  <!--<view class="bc_right flo_r">-->
                    <!--<image src="http://images.ufutx.com/201906/28/e905d0aa2ca680e6274ef7b4009c7207.png" mode="aspectFit"></image>-->
