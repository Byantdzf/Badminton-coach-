<template>
  <!--<Loading :init.sync="init"></Loading>-->
  <block wx:if="{{system === 'IOS'}}">
    <view  class="text-center color-bbb" style="margin: 22vw auto;">由于相关规范，iOS功能暂不可用</view>
  </block>
  <block wx:else>
    <form bindsubmit="formSubmit" report-submit>
      <button formType="submit" class="btn" data-type="click">
        <view class="iconActive ff   ">
          <image wx:if="{{tabIndex == 0}}" src="http://images.ufutx.com/201905/31/6dbf441f112370befd2abb373edb0486.png" mode="widthFix" style="width: 100%;" class="bc_opcit"></image>
          <image wx:else src="http://images.ufutx.com/201905/31/f36d431299cd56651ba8ab432727c14c.png" mode="widthFix" style="width: 100%;" class="bc_opcit"></image>
        </view>
        <navBarTop :tabs.sync="tabs" @tapClick="tapClick"></navBarTop>
        <view class="page__bd ff font_28">
          <view wx:for="{{list}}" wx:key="{{index}}">
            <view class="bc_box">
              <view class="flo_l text_title">专属</view>
              <view class="flo_l" style="width: 50%;line-height: 116rpx;position: relative">
                <text class="text_price bold">￥{{item.price}}</text>
                <text class="font_26 text-info">（{{item.name}})</text>
              </view>
              <view class="flo_r text_foot bold" @tap="showModal({{item}})">购买</view>
            </view>
          </view>
        </view>
        <view class="bc_call">
          <image src="http://images.ufutx.com/201905/31/c41774b536f913f927eb54592ba71905.png" mode="widthFix" class="image" @tap="makePhoneCall"></image>
          <view class="call_iphone font_26">热线：4000401707</view>
        </view>
        <view class=" font_26 state info">
          <view class="title bold text-left">{{tabIndex==0?messages[0].title:messages[1].title}}</view>
          <view style="margin: 6rpx 22rpx;" wx:for="{{tabIndex==0?messages[0].texts:messages[1].texts}}" wx:key="index">
            <view>{{item}}</view>
          </view>
        </view>
        <modal>
          <view slot="wrapper">
            <view class="bc_text color-666 font_28">
              <view class="bold text-right" @tap="hideModal">X</view>
              <scroll-view scroll-y style="max-height: 72vh;">
                <view class="text-wrapper">
                  {{deal}}
                </view>
              </scroll-view>
            </view>
            <view class="bc_check">
              <checkbox-group class="radio-group" bindchange="radioChange">
                <label class="radio">
                  <checkbox value="{{checkedValue}}" color="#D92553"/>同意遵守协议各项内容
                </label>
              </checkbox-group>
            </view>
            <view wx:if="{{!consent}}" @tap="showToast" class="bc_btn white text-center ">购买</view>
            <view @tap="btnBuy({{pay_id}})" wx:else class="bc_buybtn white text-center">购买</view>
          </view>
        </modal>
      </button>
    </form>
  </block>
</template>
<script>
  import wepy from 'wepy'
  import {service} from '../../config.js'
  import http from '../../mixins/http'
  import base from '../../mixins/base'
  import user from '../../mixins/user'
  import ShareMessage from '../../mixins/ShareMessage'
  import Loading from '../../components/loading'
  import navBarTop from '../../components/navBarTop'
  import modal from '../../components/modal'
  import {wxPay, callPhone} from '../../utils/fn'

  export default class loveMate extends wepy.page {
    mixins = [base, http, user, ShareMessage]
    config = {
      navigationBarTitleText: '红娘服务'
    }
    components = {
      Loading, navBarTop, modal
    }
    data = {
      init: false,
      checkedValue: 'consent',
      consent: false,
      tabs: ['人工牵线', '红娘托管'],
      activeInput: false,
      loading: false,
      noMore: false,
      meet: [],
      system: '', // 机型
      list: [],
      tabIndex: 0,
      trade_no: '',
      Hosting: [],
      messages: [
        {
          title: '什么情况需要人工牵线',
          texts: [
            '1、牵线双方均为平台用户', '2、在平台上发现有心仪对象时，却不知如何联系Ta', '3、在平台上发现有心仪对象时，却不知对方是否愿意交往'
          ]
        },
        {
          title: '什么情况需要红娘托管',
          texts: [
            '1、已注册为平台用户', '2、没时间没地方找对象', '3、有合理的择偶要求'
          ]
        }
      ],
      pay_id: '',
      table: [
        {title: '10元', value: '10', active: false},
        {title: '20元', value: '20', active: false},
        {title: '50元', value: '50', active: true},
        {title: '100元', value: '100', active: false},
        {title: '200元', value: '200', active: false},
        {title: '500元', value: '500', active: false}
      ],
      deal: '',
      price: 50 // 奉献金
    }

    onShareAppMessage(res) {
      return this.$parent.onShareAppMessage(this.config.navigationBarTitleText)
    }

    onShow() {
      this.$parent.getTracker(this.$root.$name, this.config.navigationBarTitleText)
    }

    onLoad() {
      this.system = wx.getStorageSync('system')
      this.upDatelist()
    }
    upDatelist(type) {
      let _this = this
      _this.loading = true
      _this.$get({
        url: `${service.appointments}`,
        data: {
          type: type
        }
      }, {
        success: ({code, data}) => {
          _this.meet = data.active_appointments
          _this.Hosting = data.passive_appointments
          _this.list = _this.meet
          _this.messages[0].texts = _this.meet[0].desc
          _this.messages[1].texts = _this.Hosting[0].desc
          _this.$apply()
          console.log(_this.messages)
        },
        fail: ({code, data}) => {
        },
        complete: () => {
          _this.loaded = false
          wx.hideLoading()
        }
      })
    }
    methods = {
      showToast() {
        this.$showToast('请先同意遵守协议各项内容！')
      },
      radioChange(e) {
        if (e.detail.value.length > 0) {
          this.consent = true
        } else {
          this.consent = false
        }
        this.$apply()
        console.log(this.consent)
      },
      showModal(item) {
        this.pay_id = item.id
        this.deal = item.deal
        this.$apply()
        this.$invoke('modal', 'showModal')
      },
      hideModal() {
        this.$invoke('modal', 'hideModal')
      },
      btnBuy(id) {
        let that = this
        that.$invoke('modal', 'hideModal')
        that.$post({
          url: `${service.appointments}/${id}`
        }, {
          success: ({code, data}) => {
            that.trade_no = data.trade_no
            that.$apply()
            let wxconfig = data.wx_pay.config
            if (wxconfig.payment_debug) {
              return that.$post({url: `${service.orderpay}/${that.trade_no}`}, {
                success: ({code, data}) => {
                  wx.showModal({
                    title: '购买成功',
                    content: '去约见你心仪的对象吧！',
                    cancelText: '取消',
                    confirmText: '确定',
//                    cancelColor: '#e21918',
                    success(res) {
                      if (res.confirm) {
                        wx.navigateTo({url: '/pages/home/search'})
                      } else if (res.cancel) {
                        console.log('用户点击取消')
                      }
                    }
                  })
                },
                fail: ({code, data}) => {
                },
                complete: () => {
                }
              })
            }
            wxPay(wxconfig).then(() => {
              that.$post({url: `${service.pay}/packet/${that.trade_no}`}, {
                success: ({code, data}) => {
                  wx.showModal({
                    title: '购买成功',
                    content: '去约见你心仪的对象吧！',
                    cancelText: '取消',
                    confirmText: '确定',
//                    cancelColor: '#e21918',
                    success(res) {
                      if (res.confirm) {
                        wx.navigateTo({url: '/pages/home/search'})
                      } else if (res.cancel) {
                        console.log('用户点击取消')
                      }
                    }
                  })
                }
              })
              that.$Toast_success('支付成功')
            }).catch((error) => {
              console.log(error)
            })
          },
          fail: ({code, data}) => {
          },
          complete: () => {
          }
        })
      },
      makePhoneCall() {
        // let mobile = encodeURIComponent('(400)0401707—2')
        callPhone('4000401707')
      },
      selectMoney(index) {
        for (let item of this.table) {
          item.active = false
        }
        this.table[index].active = true
        this.price = this.table[index].value
        this.$apply()
      },
      getMoney(e) {
        this.price = e.detail.value
        this.$apply()
      },
      showInput() {
        this.activeInput = !this.activeInput
        this.$apply()
      },
      // 确认
      confirm() {
        console.log(this.price)
        if (!this.price) {
          return this.$showToast('请输入金额')
        }
        let that = this,
          data = {
            price: that.price
          }
        that.$post({
          url: `${service.host}/donation`, data
        }, {
          success: ({code, data}) => {
            that.trade_no = data.trade_no
            that.$apply()
            let wxconfig = data.wx_pay.config
            if (wxconfig.payment_debug) {
              return that.$post({url: `${service.orderpay}/${that.trade_no}`}, {
                success: ({code, data}) => {
                  that.$Toast_success('支付成功')
                },
                fail: ({code, data}) => {
                },
                complete: () => {
                }
              })
            }
            wxPay(wxconfig).then(() => {
              that.$Toast_success('支付成功')
            }).catch((error) => {
              console.log(error)
            })
          },
          fail: ({code, data}) => {
          },
          complete: () => {
          }
        })
      },
      goto(url) {
        wx.navigateTo({url: url})
      }
    }
    events = {
      'tabClick': (value) => { // NavTab返回值
        // this.$showLoading('加载中...')
        // this.page = 1
        this.tabIndex = value
        this.list = this.meet
        if (value == 1) {
          this.list = this.Hosting
          this.$apply()
        }
        this.$apply()
      }
    }
  }

</script>

