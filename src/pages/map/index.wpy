          <!--<view class="flo_r _bc-message" @tap="goto('/pages/users/myMessage')">-->
            <!--<image src="http://images.ufutx.com/201812/06/85f92d47c50d8c84a26a4f08c4454b63.png" mode="aspectFit"></image>-->
