              <cover-view class="font_26 black_6 bold flo_l _bcImage"  wx:for="{{friends.photos}}" wx:key="*this">
                <!--<cover-view wx:if="{{index < 3}}" mode="aspectFit"   class='flo_l' style="background-image:url( + item.photo )"></cover-view>-->
